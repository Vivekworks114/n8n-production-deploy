# ============================================
# n8n Production Deployment Configuration
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# PostgreSQL Database Configuration
# ============================================
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=n8n

# ============================================
# n8n Application Configuration
# ============================================
# Your domain name (e.g., n8n.example.com)
N8N_HOST=n8n.example.com

# Full webhook URL (must match N8N_HOST)
WEBHOOK_URL=https://n8n.example.com/

# ============================================
# n8n Security Settings
# ============================================
# Generate a strong encryption key (32+ characters)
# You can generate one with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=CHANGE_ME_GENERATE_STRONG_KEY_HERE

# User Management (set to true to disable user management)
# If false, first user to sign up becomes owner
N8N_USER_MANAGEMENT_DISABLED=false

# Basic Auth (optional, for additional security layer)
# Set to true and provide credentials to enable
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ============================================
# n8n Performance & Data Retention
# ============================================
# Prune old execution data (true/false)
EXECUTIONS_DATA_PRUNE=true

# Max age of execution data in hours (default: 336 = 14 days)
EXECUTIONS_DATA_MAX_AGE=336

# Log level: error, warn, info, debug, verbose
N8N_LOG_LEVEL=info

# ============================================
# Let's Encrypt / ACME Configuration
# ============================================
# Email for Let's Encrypt certificate notifications
ACME_EMAIL=your-email@example.com

# ============================================
# Timezone
# ============================================
TIMEZONE=UTC
